{
  "name": "compose-booster",
  "productName": "Compose Booster",
  "version": "1.0.12",
  "description": "AI-powered email composition assistant - improve, polish, and customize your emails with advanced AI models",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "icons": "node scripts/generate-icons.js",
    "make:store": "electron-forge make --targets=@electron-forge/maker-appx && node scripts/fix-appx-manifest.js",
    "make:mac": "electron-forge make --platform=darwin",
    "make:mas": "electron-forge make --platform=mas",
    "screenshots": "node scripts/run-screenshots.js"
  },
  "keywords": [
    "email",
    "ai",
    "composition",
    "writing",
    "assistant",
    "openrouter",
    "electron",
    "claude",
    "gpt"
  ],
  "author": {
    "name": "Stephen Le",
    "email": "30328443+lestephen@users.noreply.github.com"
  },
  "license": "MPL-2.0",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-appx": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/ui": "^4.0.15",
    "electron": "^31.7.7",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "icon-gen": "^5.0.0",
    "jsdom": "^27.2.0",
    "png-to-ico": "^3.0.1",
    "puppeteer-core": "^24.32.1",
    "sharp": "^0.34.5",
    "typescript": "~4.5.4",
    "vite": "^5.4.21",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0"
  }
}
